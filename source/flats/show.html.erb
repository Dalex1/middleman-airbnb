<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/london'); height: 50vh; background-position: center;">
</div>


<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<!--   <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle", width: "70px" %> -->
<!--<p><%= flat.name %></p> -->
 <!--<h1><%= flat.description %></h1> -->
<!--<p><%= flat.city_name %></p> -->

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <div class="col-sm-6">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle", width: "70px" %>
      <p><%= flat.name %></p>
      </div>
      <div class="col-sm-6">
      <h3><%= flat.description %></h3>
      <p><%= flat.city_name %></p>
      </div>
    </div>

    <div class="col-sm-6">
      <form action="#">
        <h4>Book this flat</h4>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-6">
              <input type="text" class="form-control" placeholder="checkin">
            </div>
            <div class="col-sm-6">
              <input type="text" class="form-control" placeholder="checkout">
            </div>
          </div>
        </div>
        <div class="form-group">
          <select name="guests" id="guests" class="form-control">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
        </div>
        <div class="btn btn-success" width: "100%">
          <p>Book it!</p>
        </div>
      </form>
    </div>

  </div>
</div>
